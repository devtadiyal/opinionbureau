<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White"
    android:gravity="center"
    android:orientation="vertical">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/image"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"
        app:lottie_autoPlay="true"
        app:lottie_fileName="guitar.json"
        app:lottie_loop="true" />

    <com.logzero.opinionbureau.font.SegoeUITextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OOPS!"
        android:textAllCaps="false"
        android:textColor="@color/Gray"
        android:textSize="@dimen/_20sdp" />

    <com.logzero.opinionbureau.font.SegoeUITextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:lineSpacingExtra="@dimen/_3sdp"
        android:text="Sorry we are not available in your country right now.see the list of active countries here."
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/Gray"
        android:textSize="@dimen/_12sdp" />

    <Button
        android:id="@+id/dialogCancelBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_below="@+id/text_dialog"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_50sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@color/RedError"
        android:gravity="center_vertical|center_horizontal"
        android:text="Show List"
        android:textColor="#ffffffff"
        android:textSize="@dimen/_13sdp" />
</LinearLayout>


