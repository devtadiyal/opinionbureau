<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/app_back"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".selection.SelectionActivity">


        <RelativeLayout
            android:id="@+id/rr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/applogo"
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_62sdp"
                android:layout_alignParentLeft="true"
                android:scaleType="fitXY"
                android:src="@drawable/applogo" />

            <ImageView
                android:id="@+id/flag"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_toRightOf="@+id/applogo"
                android:src="@drawable/flag"
                android:visibility="gone" />

            <Spinner
                android:id="@+id/culture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_25sdp"
                android:textAlignment="center"
                android:visibility="gone" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/linearlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@+id/rr"
            android:orientation="vertical">


            <com.logzero.opinionbureau.font.GothamBoldTextView
                android:id="@+id/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:text="Your privacy is our top priority!"
                android:textColor="@color/greytext"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />


            <com.logzero.opinionbureau.font.SegoeUITextView
                android:id="@+id/gdpr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:lineSpacingExtra="@dimen/_5sdp"
                android:text="1. We use technologies such as: cookies, beacons, tags and scripts on this website which help us to remember and improve the experience for all of our visitors. This helps us to store login credentials if a visitor chooses to register as a member."
                android:textAlignment="viewStart"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_11sdp" />


            <com.logzero.opinionbureau.font.SegoeUITextView
                android:id="@+id/gdpr1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gdpr"
                android:layout_marginLeft="@dimen/_10sdp"

                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:lineSpacingExtra="@dimen/_5sdp"
                android:text="2. We use technologies such as: cookies, beacons, tags and scripts on this website which help us to remember and improve the experience for all of our visitors.
"
                android:textAlignment="viewStart"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_11sdp" />


            <com.logzero.opinionbureau.font.SegoeUITextView
                android:id="@+id/gdpr2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gdpr1"
                android:layout_marginLeft="@dimen/_10sdp"

                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:lineSpacingExtra="@dimen/_5sdp"
                android:text="3. We use technologies such as: cookies, beacons, tags and scripts on this website which help us to remember and improve the experience for all of our visitors.
"
                android:textAlignment="viewStart"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_11sdp" />


            <com.logzero.opinionbureau.font.SegoeUITextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gdpr2"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:lineSpacingExtra="@dimen/_5sdp"
                android:text="4. We use technologies such as: cookies, beacons, tags and scripts on this website which help us to remember and improve the experience for all of our visitors."
                android:textAlignment="viewStart"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_11sdp" />

        </LinearLayout>


        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/linearlay"
            android:layout_margin="@dimen/_10sdp"
            android:background="#6495ED" />

        <com.logzero.opinionbureau.font.GothamMediumTextView
            android:id="@+id/bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_margin="@dimen/_10sdp"
            android:text="Your privacy is our top priority!"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_12sdp"

            android:textStyle="bold" />


        <!-- add RadioGroup which contain the many RadioButton-->
        <RadioGroup
            android:id="@+id/groupradio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bottom"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <!-- In RadioGroup create the 1 Radio Button-->
            <!-- like this we will add some more Radio Button-->
            <RadioButton
                android:id="@+id/radia_id1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="I agree"
                android:textSize="@dimen/_13sdp" />

            <RadioButton
                android:id="@+id/radia_id2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="I don't agree"
                android:textSize="@dimen/_13sdp" />

        </RadioGroup>

        <LinearLayout
            android:id="@+id/next"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@+id/groupradio"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/button_roundcorner"
            android:clickable="true"
            android:elevation="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.logzero.opinionbureau.font.GothamMediumTextView
                android:id="@+id/buttonnext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:text="Next"
                android:textAllCaps="true"
                android:textColor="@color/White"
                android:textSize="@dimen/_13sdp" />

            <ImageView
                android:layout_width="@dimen/_13sdp"
                android:layout_height="@dimen/_13sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_2sdp"
                android:src="@drawable/rightarrow" />


        </LinearLayout>
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/image"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_gravity="center_horizontal"
            android:layout_centerInParent="true"
            app:lottie_autoPlay="true"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:background="@color/Transparent"
            app:lottie_fileName="sad.json"
            app:lottie_loop="true"
            />

    </RelativeLayout>

</ScrollView>